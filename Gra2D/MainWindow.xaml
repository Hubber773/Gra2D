<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra WPF" Height="720" Width="1280" Background="#FF2E673F"
        KeyDown="OknoGlowne_KeyDown"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Kontener wyświetlający mapę -->
        <Grid Name="SiatkaMapy" Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF335D23"/>
                    <GradientStop Color="#FF74ED00" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

        <Image Source="/gracz.png" HorizontalAlignment="Left" Height="90" Margin="1190,1,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Name="L_drewno" Content="Drewno: 0" FontSize="16" Margin="306,1,364,70"/>
        <Button Content="Wczytaj mapę z pliku .txt" Click="B_WczytajMape_Click" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="150" Height="29" Foreground="Black">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD6A805"/>
                    <GradientStop Color="#FFF7ECC3" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Generuj liczby mapy" Click="B_GenerujLiczbyMapy_Click" HorizontalAlignment="Left" Margin="155,1,0,0" VerticalAlignment="Top" Width="146" Height="29" Foreground="Black">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD6A805"/>
                    <GradientStop Color="#FFF7ECC3" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Kopiuj wygenerowany text" Click="B_Kopiuj_Click" HorizontalAlignment="Left" Margin="155,33,0,0" VerticalAlignment="Top" Width="146" Height="29" Foreground="Black">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD6A805"/>
                    <GradientStop Color="#FFF7ECC3" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Wklej do pliku .txt od gry" Click="B_wklejTXTGry_Click" HorizontalAlignment="Left" Margin="0,33,0,0" VerticalAlignment="Top" Width="150" Height="29" Foreground="Black">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFD6A805"/>
                    <GradientStop Color="#FFF7ECC3" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Odkliknij" HorizontalAlignment="Left" Margin="0,67,0,0" VerticalAlignment="Top" Width="150" Height="20" Foreground="White">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2D0000"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <TextBox Name="TB_ileWierszy" GotFocus="TB_ileWierszy_GotFocus"  HorizontalAlignment="Left" Margin="155,67,0,0" TextWrapping="Wrap" Text="Ile wierszy?" VerticalAlignment="Top" Width="73" Foreground="Black">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC79B00"/>
                    <GradientStop Color="#FFFFF8E0" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
        <TextBox Name="TB_ileKolumn" GotFocus="TB_ileKolumn_GotFocus"  HorizontalAlignment="Left" Margin="228,67,0,0" TextWrapping="Wrap" Text="Ile kolumn?" VerticalAlignment="Top" Width="73" Foreground="Black">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC79B00"/>
                    <GradientStop Color="#FFFFF8E0" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>

        <Rectangle HorizontalAlignment="Center" Height="8" Margin="0,92,0,0" VerticalAlignment="Top" Width="1280">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF328E00" Offset="1"/>
                    <GradientStop Color="#FF4FFBC8"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button Content="Instrukcja (ma otwierać nowe okno z instrukcją" HorizontalAlignment="Left" Height="21" Margin="1190,70,0,0" VerticalAlignment="Top" Width="90"/>
    </Grid>
</Window>

